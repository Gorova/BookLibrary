@model BookLibrary.Web.ViewModel.CategoryViewModel
@{
    ViewBag.Title = "Delete category";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure in deleting this category?</h3>
<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(i => i.Name)
        </dt>
        <dd>
            @Html.DisplayFor(i => i.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(i => i.DateOfCreating)
        </dt>
        <dd>
            @Html.DisplayFor(i => i.DateOfCreating)
        </dd>

        <dt>
            @Html.DisplayNameFor(i => i.Books)
        </dt>
        @foreach (var book in Model.Books)
        {
            <dd>
                @book.Title
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        <div class="form-actions no-color">
            @Html.HiddenFor(i => i.Id)
            <input type="submit" value="save" class="btn btn-default"/>
            <input type="button" value="cancel" class="btn btn-default" onclick="location.href = '@Url.Action("Index", "Category")'" />
        </div>
    }
</div>

